    "test-unit": "jest ./test/unit --collectCoverage",
    "test-e2e": "jest ./test/e2e"
  },
  "author": "Loges R",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.8",
    "commander": "^12.0.0",
    "joi": "^17.12.3"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
